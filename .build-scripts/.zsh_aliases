# ALIAS FOR git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME
alias config='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'

# i.e. google how to cook
alias google='f(){xdg-open "https://google.com/search?q=$*";unset -f f;};f'

# check my IP
