[user]
	useConfigOnly = true
[core]
	editor = vi
	ignorecase = true
[status]
	showUntrackedFiles = no
[color]
	ui = auto
[color "branch"]
        current = green bold
        local = green bold
        remote = cyan bold
[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
        whitespace = red reverse
[color "status"]
        added = green bold
        changed = yellow bold
        untracked = red bold
[diff]
	compactionHeuristic = true

